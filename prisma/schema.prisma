// 1. THIS TOP PART IS REQUIRED
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 2. Your User Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  todos         Todo[]    // <--- Link to Todo
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// 3. Your Todo Model
model Todo {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  completedAt DateTime?
  dueDate   DateTime?
  createdAt DateTime @default(now())
  color     String   @default("#000000")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}